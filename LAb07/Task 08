#include <iostream>
#include <string>
using namespace std;

class Order {
public:
    int orderID;
    string customerName;
    double totalPrice;
};

void swap(Order &a, Order &b) {
    Order temp = a;
    a = b;
    b = temp;
}

int partition(Order arr[], int low, int high) {
    double pivot = arr[high].totalPrice;
    int i = low - 1;

    for (int j = low; j < high; j++) {
        if (arr[j].totalPrice < pivot) {
            i++;
            swap(arr[i], arr[j]);
        }
    }
    swap(arr[i + 1], arr[high]);
    return i + 1;
}

void quickSort(Order arr[], int low, int high) {
    if (low < high) {
        int pi = partition(arr, low, high);
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}

void printOrders(Order arr[], int n) {
    cout << "\nSorted Orders (by Total Price):\n";
    cout << "-----------------------------------------\n";
    for (int i = 0; i < n; i++) {
        cout << "Order ID: " << arr[i].orderID << endl;
        cout << "Customer: " << arr[i].customerName << endl;
        cout << "Total Price: $" << arr[i].totalPrice << endl;
        cout << "-----------------------------------------\n";
    }
}

int main() {
    Order orders[] = {
        {1001, "Alice", 250.75},
        {1002, "Bob", 120.50},
        {1003, "Charlie", 300.00},
        {1004, "Diana", 180.20}
    };

    int n = sizeof(orders) / sizeof(orders[0]);

    cout << "Original Orders:\n";
    cout << "-----------------------------------------\n";
    for (int i = 0; i < n; i++) {
        cout << "Order ID: " << orders[i].orderID << endl;
        cout << "Customer: " << orders[i].customerName << endl;
        cout << "Total Price: $" << orders[i].totalPrice << endl;
        cout << "-----------------------------------------\n";
    }

    quickSort(orders, 0, n - 1);
    printOrders(orders, n);

    return 0;
}
