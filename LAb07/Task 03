#include <iostream>
#include <string>
using namespace std;


struct Product {
    string name;
    double price;
    string description;
    string availability;
};


void swap(Product &a, Product &b) {
    Product temp = a;
    a = b;
    b = temp;
}


int partition(Product arr[], int low, int high) {
    double pivot = arr[high].price;  
    int i = low - 1;

    for (int j = low; j < high; j++) {
        if (arr[j].price < pivot) {
            i++;
            swap(arr[i], arr[j]);
        }
    }
    swap(arr[i + 1], arr[high]);
    return (i + 1);
}


void quickSort(Product arr[], int low, int high) {
    if (low < high) {
        int pi = partition(arr, low, high);
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}


void displayProducts(Product arr[], int size) {
    cout << "\nSorted Products by Price:\n";
    cout << "-----------------------------------------\n";
    for (int i = 0; i < size; i++) {
        cout << "Name: " << arr[i].name << endl;
        cout << "Price: $" << arr[i].price << endl;
        cout << "Description: " << arr[i].description << endl;
        cout << "Availability: " << arr[i].availability << endl;
        cout << "-----------------------------------------\n";
    }
}

int main() {

        {"Laptop", 850.00, "14-inch, 16GB RAM, 512GB SSD", "In Stock"},
        {"Smartphone", 499.99, "128GB, Dual Camera", "Out of Stock"},
        {"Headphones", 149.50, "Noise Cancelling Wireless", "In Stock"}
    };

